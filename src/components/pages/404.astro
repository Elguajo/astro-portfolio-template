---
import PageLayout from '@/layouts/PageLayout.astro';
import Page_404 from '@hdud/common/pages/404.astro';
import { getI18n } from '@/i18n/index';
import { siteConfig } from '@/site.config';

const i18n = await getI18n('en', 'design');
const homeUrl = '/';
const mates = {
  title: '404',
  description: i18n('mate.description'),
  author: siteConfig.author,
  email: siteConfig.email,
  local: 'en',
  ogImage: '/og-image/site-image.png',
};
---

<PageLayout {...mates}>
  <Page_404 shows={i18n('page_404')} homeUrl={homeUrl} />
</PageLayout>
