---
// PageTransition component with different animation options
export interface Props {
  animation?: 'slide' | 'fade' | 'scale' | 'flip' | 'custom';
  duration?: string;
  direction?: 'left' | 'right' | 'up' | 'down';
  easing?: 'ease' | 'ease-in' | 'ease-out' | 'ease-in-out' | 'linear';
}

import type { AnimationConfig } from '@/config/animations';
import { getTransitionConfig } from '@/config/animations';

const props = Astro.props as Props;
const {
  animation = 'slide',
  duration = '0.4s',
  direction = 'left',
  easing = 'ease-in-out',
} = props;

const transitionConfig = {
  type: animation,
  duration,
  direction,
  easing,
} satisfies AnimationConfig;

const selectedTransition = getTransitionConfig(transitionConfig);
---

<div transition:animate={selectedTransition}>
  <slot />
</div>

<style>
  /* Smooth transitions for slotted content */
  * {
    transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
  }

  /* Respect user's motion preferences */
  @media (prefers-reduced-motion: reduce) {
    * {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
</style>
